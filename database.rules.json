{
  "rules": {
    "recipes": {
      ".read": true,
      ".write": "auth != null"
    },
    "storage": {
      "covers": {
        "$recipeId": {
          ".write": "auth != null",
          ".validate": "request.resource.contentType.startsWith('image/') && request.resource.size < 5 * 1024 * 1024"

        }
      }
    }
  }
}
